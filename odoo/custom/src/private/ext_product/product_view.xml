<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<!-- Paper Size -->
        <record id="product_paper_size_form_view" model="ir.ui.view">
            <field name="name">product.paper.size.form.view</field>
            <field name="model">product.paper.size</field>
            <field name="arch" type="xml">
                <form string="Paper Size" version="7.0">
