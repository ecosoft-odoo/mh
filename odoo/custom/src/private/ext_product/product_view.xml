		<!-- Inherited -->
        <record id="product_normal_form_view_ext" model="ir.ui.view">
            <field name="name">product.normal.form.view.ext</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/sheet//field[@name='categ_id']" position="replace">
                    	<field name="categ_id" on_change="onchange_product_categ(categ_id)"/>
                    </xpath>
                    <xpath expr="/form/sheet/notebook/page[@string='Information']/group//div[@name='ean']" position="after">
                    	<field name="brand_id"/>
						<field name="partner_barcode"/>
                    </xpath>                                            
                    <xpath expr="/form/sheet/notebook/page[@string='Information']/field[@name='description']" position="before">
                        <separator string="Product Properties"/>
	                    <group>
	                        <group attrs="{'invisible':[('sale_ok','=',False)]}">
	                            <field name="paper_size_id"/>
	                            <field name="paper_grams_id"/>
	                            <field name="cover_unit_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
	                        </group>
	                        <group attrs="{'invisible':[('sale_ok','=',False)]}">
	                            <field name="paper_nums_id"/>
	                            <field name="paper_binding_id"/>
	                            <field name="product_pack_id"/>
	                        </group>
	                        <group attrs="{'invisible':[('purchase_ok','=',False)]}">
	                            <field name="pieces_per_uom"/>
	                        </group>	                    
						</group>                    
                    </xpath>                         
                </data>
            </field>
        </record>

		<!-- Inherited -->
        <record id="product_category_form_view_ext" model="ir.ui.view">
            <field name="name">product.category.form.view.ext</field>
            <field name="inherit_id" ref="product.product_category_form_view" />
            <field name="model">product.category</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/sheet/div" position="after">
                        <div class="oe_title">
                            <label for="code" class="oe_edit_only"/>
                            <h1>
                                <field name="code"/>
                            </h1>
                        </div>
                    </xpath>
				</data>
            </field>
        </record>
        
	</data>
