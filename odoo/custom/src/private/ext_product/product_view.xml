            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.paper.size</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new paper size.
              </p>
              <p>
              	Paper size is the master data used for products
              </p>
            </field>
        </record>
        <menuitem action="product_paper_size_form_action" id="menu_product_paper_size_form_action" parent="product.prod_config_main" sequence="25" groups="base.group_no_one"/>

